<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MainActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:id="@+id/subListCard"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#7E01D8"
            android:weightSum="10"
            >
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:src="@mipmap/subjectlist"
                android:scaleType="fitXY"
                />
            <TextView
                android:background="#61613F"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="SUBJECT LIST"
                android:textAlignment="center"
                android:textSize="32sp"
                android:textColor="#ff0000"
                android:gravity="center"
                android:textStyle="bold"
                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:id="@+id/calculationCard"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#01D80C"
            android:weightSum="10"
            >
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:src="@mipmap/calculation"
                android:scaleType="fitXY"
                />
            <TextView
                android:background="#61613F"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:text="CGPA CALCULATOR"
                android:textAlignment="center"
                android:textSize="32sp"
                android:textColor="#ff0000"
                android:gravity="center"
                android:textStyle="bold"
                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>