<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:id="@+id/root"
    android:background="#F8F8F8"
    tools:context=".SubjectActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_height="0dp">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Year:"
            android:textSize="24sp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#C2B9B9"
            android:textAlignment="center"
            android:gravity="center"
            />
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/yearSpinner"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            app:ms_dropdown_max_height="200dp"
            app:ms_background_color="#FFF"
            android:textColor="#B1ABAB"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="Term:"
            android:textSize="24sp"
            android:layout_margin="5dp"
            android:textStyle="bold"
            android:textColor="#C2B9B9"
            android:textAlignment="center"
            android:gravity="center"
            />
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/termSpinner"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            app:ms_dropdown_max_height="200dp"
            app:ms_background_color="#FFFFFF"
            android:textColor="#B1ABAB"
            android:textSize="20sp"
            />
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:text="Show"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#fff"
        android:background="#C2B9B9"
        android:id="@+id/showSubBtn"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        />
    <ListView
        android:layout_marginTop="10dp"
        android:background="#FFF"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.5"
        android:id="@+id/subList"
        >
    </ListView>


</LinearLayout>